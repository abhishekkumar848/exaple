<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Booking</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
</head>
<body class="bg-gray-100">
   

    <!-- AI Assist Modal -->
 <!-- AI Assist Modal -->
<!-- AI Assist Modal (Hidden Initially) -->
<div class="flex flex-wrap">
  <div id="chatModal" class="w-[50%] flex items-center justify-center bg-white ">
    <div class="bg-card rounded-lg shadow-lg p-6 max-w-md mx-auto relative w-full md:w-[400px] border border-2">
        <button id="closeChat" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700">&times;</button>
        <h2 class="text-lg font-semibold text-primary text-center">AI Assist</h2>
        
        <div class="flex justify-center mt-4">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
                <div class="w-10 h-10 bg-green-500 rounded-full"></div>
            </div>
        </div>
        
        <p class="text-center text-muted-foreground mt-4">How can I assist you today?</p>
  
        <!-- Scrollable Chat Area -->
        <div id="chatContainer" class="mt-4 flex flex-col space-y-2 h-[50vh] overflow-y-auto p-2 border border-gray-300 rounded-lg">
            <!-- Example Messages -->
            <div class="flex justify-start">
                <div class="bg-gray-200 text-gray-900 px-4 py-2 rounded-lg max-w-[80%]">Hello! How can I help you?</div>
            </div>
            <div class="flex justify-end">
                <div class="bg-blue-500 text-white px-4 py-2 rounded-lg max-w-[80%]">Tell me about James.</div>
            </div>
            <div class="flex justify-start">
                <div class="bg-gray-200 text-gray-900 px-4 py-2 rounded-lg max-w-[80%]">James is an expert in AI training...</div>
            </div>
        </div>
  
        <!-- Input Field -->
        <div class="mt-6 flex items-center">
            <input type="text" placeholder="Type a message..." class="border border-border rounded-lg p-2 w-full" id="chatInput"/>
            <button id="sendMessage" class="ml-2 bg-blue-500 text-white px-4 py-2 rounded-lg">Send</button>
        </div>
    </div>
  </div>
  
    <div class="w-[50%] max-w-2xl mx-auto bg-white shadow-2xl rounded-2xl p-10  border-4 border-purple-300 relative">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-8 text-center">Welcome</h2>
        
        <form class="space-y-6">
          <!-- Course Title -->
          <div>
            <label class="block text-gray-700 font-semibold mb-2">📌 Name</label>
            <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Name">
          </div>
      
          <!-- Description -->
          <div>
            <label class="block text-gray-700 font-semibold mb-2">📝 Email</label>
            <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Email">
          </div>
      
          <!-- Category & Difficulty -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-gray-700 font-semibold mb-2">📚 Age</label>
              <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Age">
            </div>
            <div>
              <label class="block text-gray-700 font-semibold mb-2">🎯 Profession</label>
              <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Profession">

            </div>
          </div>
      
          <!-- Price & Rating -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-gray-700 font-semibold mb-2">Stream</label>
              <input type="number" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Stream">
            </div>
            <div>
              <label class="block text-gray-700 font-semibold mb-2">College</label>
              <input type="number" step="0.1" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your College's Name">
            </div>
          </div>
      
          <!-- Instructor & Platform -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-gray-700 font-semibold mb-2">👨‍🏫 Domain</label>
              <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Domain">
            </div>
            <div>
              <label class="block text-gray-700 font-semibold mb-2">🎓 Skills</label>
              <input type="text" class="w-full border-2 border-purple-300 rounded-xl p-3 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition placeholder-gray-500 shadow-md" placeholder="Enter Your Skills">
            </div>
          </div>
      
          <!-- Course Link -->
        
      
          <!-- Submit Button -->
          <button type="submit" class="w-full bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 text-white font-semibold p-4 rounded-xl shadow-lg hover:shadow-2xl hover:scale-105 transition duration-300 text-lg">
            🚀 Submit Course
          </button>
        </form>
    </div>
  </div>



</div>

<script>
  document.getElementById('chatButton').addEventListener('click', function() {
      document.getElementById('chatModal').classList.remove('hidden');
  });

  document.getElementById('closeChat').addEventListener('click', function() {
      document.getElementById('chatModal').classList.add('hidden');
  });

  document.getElementById('sendMessage').addEventListener('click', sendMessage);
  document.getElementById('chatInput').addEventListener('keypress', function(event) {
      if (event.key === 'Enter') sendMessage();
  });

  function sendMessage() {
      const input = document.getElementById('chatInput');
      const message = input.value.trim();
      if (!message) return;

      const chatContainer = document.getElementById('chatContainer');

      // Add sender's message
      const senderMessage = document.createElement('div');
      senderMessage.classList.add('flex', 'justify-end');
      senderMessage.innerHTML = `<div class="bg-blue-500 text-white px-4 py-2 rounded-lg max-w-[80%]">${message}</div>`;
      chatContainer.appendChild(senderMessage);

      // Auto-reply from AI (example)
      setTimeout(() => {
          const botMessage = document.createElement('div');
          botMessage.classList.add('flex', 'justify-start');
          botMessage.innerHTML = `<div class="bg-gray-200 text-gray-900 px-4 py-2 rounded-lg max-w-[80%]">I'm here to help!</div>`;
          chatContainer.appendChild(botMessage);
          chatContainer.scrollTop = chatContainer.scrollHeight; // Auto-scroll
      }, 1000);

      input.value = '';
      chatContainer.scrollTop = chatContainer.scrollHeight; // Auto-scroll
  }
</script>


</body>
</html>